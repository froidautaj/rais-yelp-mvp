<h1>Add your Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: 'Content' %>
  <%= f.input :rating, placeholder: 'Choose 1-5' %>
  <%= f.submit 'Add review', class: 'btn btn-primary' %>
<% end %>
<br>
<%= link_to 'Restaurant', restaurant_path(@restaurant), class: 'btn btn-primary' %>
